    <!--Formsectioni start-->
    @*<form enctype="multipart/form-data" method="post" >*@
    <div class="row mx-2 mt-3">
        <div class="col-md-4 mt-1">
            <label for="inputEmail4">Select Mission</label>
            <select class="form-control mt-1" id="mId" onchange="editStory()">
                <option>Select your mission</option>
                @if (Model.missionName != null)
                {
                    <option value="@Model.missionId" id="@Model.missionId" selected>@Model.missionName</option>
                }
            </select>
        </div>

        <div class="col-md-4 mt-1">
            <label for="inputEmail4">My Story Title</label>
            <input type="text" class="form-control mt-1" placeholder="Last name" id="title" value="@Model.storyTitle">
        </div>
        <div class="col-md-4 mt-1">
            <label for="inputEmail4">Date</label>
            <input type="date" class="form-control mt-1" placeholder="Last name" id="dataAndTime" value="@Model.dateAndTime">
        </div>
    </div>
    <div class="row mx-2 mt-2">
        <div class="col-12 my-3">
            <label for="inputEmail4">Story Description</label>
<textarea id="storytext" placeholder="I loved this mission because...">@Model.storyDescription</textarea>
        </div>
    </div>
    <div class="row mx-2 mt-1">
        <div class="col-12">
            <label for="inputEmail4 ">Enter Video URL</label>
            <input class="form-control mt-1" id="videoURL" type="text" placeholder="Enter video url" value="@Model.videoURL">
        </div>
    </div>
    <div class="row mx-2 mt-1">
        <div class="col-12">
            <div id="drop-zone" class="w-100">
                <i class="bi bi-plus-lg" style="font-size: 50px;"></i>
                <span class="drop-text">Drag and drop images here or click to select</span>
                <input type="file" id="file-input" multiple accept="image/*,video/*" style="display: none;">
            </div>

            <div id="image-preview">
                @{
                    if (Model.imagepaths != null)
                    {
                        foreach (var data in Model.imagepaths)
                        {
                            <div class="image-container">
                                <img class="image-preview" src="@data">
                                <div class="remove-image">&#10006</div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>

    <div class="row mx-2 mt-2">
        <div class="col-12 d-flex justify-content-between">
            <div>
                <a asp-controller="Story" asp-action="StoryListingPage" type="button" class="btn btn-outline-warning" style="border-radius: 50px;">Cancel</a>
            </div>


            <div>
                @{
                    if (@Model.storyStatus == "Draft" || @Model.storyStatus == "DRAFT")
                    {
                        <button class="btn buttonColor me-2" style="border-radius: 50px;color:#f88634;border:2px solid #f88634">Save</button>
                        <button class="btn buttonColor" style="border-radius: 50px;color:#f88634;border:2px solid #f88634" onclick="submit(@Model.storyId)">Submit</button>
                    }
                    else if (@Model.storyStatus == "PUBLISHED" || @Model.storyStatus == "Published")
                    {
                        <button class="btn buttonColor" style="border-radius: 50px;color:#f88634;border:2px solid #f88634" onclick="editData()">Edit</button>

                    }
                    else
                    {
                        <button class="apply btn buttonColor" style="border-radius: 50px;color:#f88634;border:2px solid #f88634" onclick="submitData()">Save</button>
                        <button class="apply btn buttonColor bg-secondary" style="border-radius: 50px;color:#f88634;border:2px solid #f88634" disabled>Submit</button>
                    }
                }

            </div>
        </div>
    </div>

